                android:text="3) Message by Setting Timer"
                android:textColor="@color/darkBlack"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Select contact to which you want to set timer for message"
                android:textColor="@color/darkBlack"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="739dp"
                android:scaleType="fitStart"
                android:layout_marginTop="30dp"

                android:src="@drawable/contactlist" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="fig_ContactList"
                android:textColor="@color/darkBlack"
                android:textSize="10dp"/>


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="739dp"
                android:scaleType="fitStart"
                android:layout_marginTop="30dp"

                android:src="@drawable/setmessagetimer" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/darkBlack"
                android:layout_marginBottom="20dp"
                android:text="Set Message Timer by Selecting Date,Time and Enter the Message"
